@model IEnumerable<Medical_Inventory.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Category List</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-success">Create New</a>
</p>
<table class="table table-bordered table-striped">
    <thead>
    <tr class="text-center">
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpdatedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpdatedTime)
        </th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy!.UserName)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.CreatedTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedBy!.UserName)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.UpdatedTime)
            </td>
            <td class="text-center">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary" style="width: 100px">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info" style="width: 100px">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-warning" style="width: 100px">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>