@model IEnumerable<Entities.Company>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-success">Create New</a>
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr class="text-center">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedTime)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy!.UserName)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.CreatedTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedBy!.UserName)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.UpdatedTime)
                </td>
            <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary" style="width: 100px">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info ms-2" style="width: 100px">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-warning ms-2" style="width: 100px">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
