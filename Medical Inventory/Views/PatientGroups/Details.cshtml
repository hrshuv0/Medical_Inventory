@model Medical_Inventory.Models.PatientGroup

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>PatientGroup</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-4">
            @Html.DisplayNameFor(model => model.CreatedBy)
        </dt>
        <dd class="col-8">
            @Html.DisplayFor(model => model.CreatedBy!.UserName)
        </dd>
        <dt class="col-4">
            @Html.DisplayNameFor(model => model.CreatedTime)
        </dt>
        <dd class="col-8">
            @Html.DisplayFor(model => model.CreatedTime)
        </dd>
        <dt class="col-4">
            @Html.DisplayNameFor(model => model.UpdatedBy)
        </dt>
        <dd class="col-8">
            @Html.DisplayFor(model => model.UpdatedBy!.UserName)
        </dd>
        <dt class="col-4">
            @Html.DisplayNameFor(model => model.UpdatedTime)
        </dt>
        <dd class="col-8">
            @if (DateTime.MinValue != @Model.UpdatedTime)
            {
                @Html.DisplayFor(modelItem => @Model.UpdatedTime)
            }
        </dd>
    </dl>
</div>
<div class="col-6">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-primary w-25">Edit</a>
    <a asp-action="Index" class="btn btn-outline-secondary w-25">Back to List</a>
</div>
